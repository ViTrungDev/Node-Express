<div class="mt-4">
    <h1 class="title">Danh sách khóa học</h1>
    <a href="/me/strash/courses">Thùng rác({{deletedCount}})</a>
    <table class="table mt-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên khóa học</th>
            <th scope="col">Trình độ</th>
            <th scope="col" colspan="3">Thời gian tạo</th>
        </tr>
    </thead>
    <tbody>
        {{#each course}}
        <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.level}}</td>
            <td>{{this.createdAt}}</td>
            <td>
            <a href="/course/{{this._id}}/edit" class="btn btn-warning">Sửa</a>
            </td>
            <td>
            <a href="" class="btn btn-danger" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-course-modal">Xóa</a>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="5" class="text-center">Chưa có khóa học nào.
                add new course <a href="/course/create">here</a>
            </td>
        </tr>
        {{/each}}
        
    </tbody>
    </table>
</div>
{{!-- Confirm delete course --}}
<div id="delete-course-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Xóa khóa học</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>Bạn chắc chắc muốn xóa khóa học này chứ?</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa bỏ</button>
        </div>
        </div>
    </div>
</div>
{{!-- hidden form delete--}}
<form name="delete-course-form" method="POST"></form>
<script>
    document.addEventListener("DOMContentLoaded", function () {
    let courseId;
    let deleteForm = document.forms['delete-course-form'];
    const deleteModal = document.getElementById('delete-course-modal');
    const loadingElement = document.getElementById('loading');
    let btnDeleteCourse = document.getElementById("btn-delete-course");

    // Xử lý khi mở modal
    if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            courseId = button.getAttribute('data-id');
        });
    }

    // Xử lý nút xóa
    if (btnDeleteCourse) {
        btnDeleteCourse.onclick = function () {
            // Hiển thị hiệu ứng loading
            if (loadingElement) {
                loadingElement.classList.add("active");
            }

            // Cập nhật action của form
            deleteForm.action = '/course/' + courseId + '?_method=DELETE';

            // Gửi form sau 2 giây
            setTimeout(function () {
                deleteForm.submit();
            }, 2000);
        };
    }
});
</script>