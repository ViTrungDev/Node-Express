<form action="/course/store" method="post">
    <div class="form-control">
        <label for="name" class="name">Tên khóa học</label><br>
        <input type="text" class="form-control" id="name" placeholder="Nhập tên khóa học" name="name" required>
    </div>
    <div class="form-control">
        <label for="description" class="description">Mô tả</label>
        <input type="text" class="form-control" id="description" placeholder="Mô tả khóa học" name="description" required>
    </div>
    <div class="form-control">
        <label for="image" class="image">Ảnh</label>
        <input type="text" class="form-control" id="image" placeholder="URL hình ảnh" name="image" required>
    </div>
    <div class="form-control">
        <label for="videoID" class="videoID">Video ID</label>
        <input type="text" class="form-control" id="videoID" placeholder="Nhập Video ID" name="videoID" required>
    </div>
    <div class="form-control">
        <label for="level" class="level">Trình độ</label>
        <input type="text" class="form-control" id="level" placeholder="Nhập trình độ" name="level" required>
    </div>
    <button type="submit" class="btn btn-primary">Thêm Khóa Học</button>
</form>
